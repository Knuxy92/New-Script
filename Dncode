
local Table = {
    ['a'] = 'Î±', ['b'] = 'Î²', ['c'] = 'Ï†', ['d'] = 'â€¢', ['e'] = 'âš€', ['f'] = 'â™ª', ['g'] = 'â•²Ê•Â·á´¥Â·â•²Ê”', ['h'] = 'â˜', ['i'] = 'â–“â–’', ['j'] = 'â™¥',
    ['k'] = 'â˜ª', ['l'] = 'ãƒ…', ['m'] = 'â†’', ['n'] = 'â£ à³‹', ['o'] = 'ğŸŒ¥', ['p'] = 'â…¶', ['q'] = 'ğŸµ', ['r'] = 'âš¡', ['s'] = 'â„¢', ['t'] = 'â™œ',
    ['u'] = 'â“©', ['v'] = 'ãƒ', ['w'] = 'âš•', ['x'] = 'à¼º', ['y'] = 'ğŸŒ©', ['z'] = 'â„¨', ['A'] = 'ğ˜­', ['B'] = 'ãˆ¥', ['C'] = 'â„ ', ['D'] = 'Â¢',
    ['E'] = 'â“¨', ['F'] = 'â‰‹', ['G'] = 'â€', ['H'] = 'Ëš Â· .', ['I'] = 'â‹¯', ['J'] = 'â™‘', ['K'] = 'â‘¦', ['L'] = 'ãˆ¡', ['M'] = 'â‚³', ['N'] = 'ï¿¥',
    ['O'] = 'â€ ', ['P'] = 'â‰', ['Q'] = 'áŸš', ['R'] = 'å½¡', ['S'] = 'Ê• â€“ á´¥ â€“ Ê”', ['T'] = 'â˜†', ['U'] = 'â‘½', ['V'] = 'ãˆ¢', ['W'] = 'Â©', ['X'] = 'âœ‚',
    ['Y'] = 'âœª', ['Z'] = 'â•¯', [' '] = 'âª»', ['1'] = 'âœ¢',['2'] = 'â˜¸',['3'] = 'Ûµ',['4'] = 'âœ“',['5'] = 'â©',['6'] = 'ê†œ',['7'] = 'â™€',['8'] = 'ËË™ËŸË™Ë€',['9'] = 'Ê•â€¢âŠ–â€¢Ê”',['0'] = 'ãƒ»ã‰¨ãƒ»',
}

RTF = {}
RTF.encode = function(text)
    local _ = {}
    for i = 1, #text do
        local __ = string.sub(text, i, i)
        local ___ = Table[__]
        if ___ then
            table.insert(_, ___)
        else
            table.insert(_, __)
        end
    end
    return table.concat(_, ',')
end

RTF.decode = function(text)
    local _ = {}
    local __ = {}
    for ___ in string.gmatch(text, '([^,]+)') do
        table.insert(__, ___)
    end
    for i = 1, #__ do
        local ___ = __[i]
        for key, value in pairs(Table) do
            if value == ___ then
                table.insert(_, key)
                break
            end
        end
    end
    return table.concat(_)
end

return RTF
